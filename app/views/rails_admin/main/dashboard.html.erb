<h1>Admin Dashboard</h1>

<div class="row">
  <div class="col-md-6">
    <h2>Locations</h2>
    <%= link_to "➕ Add new location", rails_admin.new_path(model_name: 'location'), class: "btn btn-primary mb-3" %>

    <ul>
      <% Location.all.each do |loc| %>
        <li><%= link_to loc.name, rails_admin.show_path(model_name: 'location', id: loc.id) %></li>
      <% end %>
    </ul>
  </div>

  <div class="col-md-6">
    <h2>Session Types</h2>
    <%= link_to "➕ Add new session type", rails_admin.new_path(model_name: 'session_type'), class: "btn btn-primary mb-3" %>

    <ul>
      <% SessionType.all.each do |st| %>
        <li><%= link_to st.title, rails_admin.show_path(model_name: 'session_type', id: st.id) %></li>
      <% end %>
    </ul>
  </div>
</div>
