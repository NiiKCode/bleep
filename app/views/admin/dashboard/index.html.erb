<h1>Admin Dashboard</h1>

<div class="grid grid-cols-2 gap-6">
  <!-- Locations column -->
  <div>
    <h2>üìç Locations</h2>
    <ul>
      <!-- Create new first -->
      <li>
        <%= link_to "‚ûï Create new location", new_admin_location_path, class: "btn btn-sm btn-outline-primary" %>
      </li>
      <% @locations.each do |location| %>
        <li>
          <strong><%= location.name %></strong>
          |
          <%= link_to "‚úèÔ∏è Edit", edit_admin_location_path(location), class: "text-blue-600" %>
          |
          <%= link_to "üóëÔ∏è Delete", "#",
                      class: "text-red-600 delete-link",
                      data: {
                        bs_toggle: "modal",
                        bs_target: "#confirmDeleteModal",
                        delete_url: admin_location_path(location)
                      } %>
          |
          <%= link_to "üìÖ Schedule", schedule_admin_location_path(location), class: "text-green-600" %>
        </li>
      <% end %>
    </ul>
  </div>

  <!-- Session Types column -->
  <div>
    <h2>üèãÔ∏è Session Types</h2>
    <ul>
      <!-- Create new first -->
      <li>
        <%= link_to "‚ûï Create new session type", new_admin_session_type_path, class: "btn btn-sm btn-outline-primary" %>
      </li>
      <% @session_types.each do |st| %>
        <li>
          <strong><%= st.title %></strong>
          |
          <%= link_to "‚úèÔ∏è Edit", edit_admin_session_type_path(st), class: "text-blue-600" %>
          |
          <%= link_to "üóëÔ∏è Delete", "#",
                      class: "text-red-600 delete-link",
                      data: {
                        bs_toggle: "modal",
                        bs_target: "#confirmDeleteModal",
                        delete_url: admin_session_type_path(st)
                      } %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<!-- Shared Delete Confirmation Modal -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content rounded-lg shadow-lg">
      <div class="modal-header">
        <h5 class="modal-title" id="confirmDeleteModalLabel">Confirm Deletion</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this item? This action cannot be undone.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <form id="deleteForm" method="post" action="">
          <%= hidden_field_tag :_method, :delete %>
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <button type="submit" class="btn btn-danger">Yes, delete</button>
        </form>
      </div>
    </div>
  </div>
</div>
