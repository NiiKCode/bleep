<h1>Admin Dashboard</h1>

<div class="grid grid-cols-2 gap-6">
  <!-- Locations column -->
  <div>
    <h2>Locations</h2>
    <%= link_to "➕ Add new location", new_admin_location_path, class: "btn btn-primary" %>
    <ul>
      <% @locations.each do |location| %>
        <li><%= link_to location.name, admin_location_path(location) %></li>
      <% end %>
    </ul>
  </div>

  <!-- Sessions column -->
  <div>
    <h2>Sessions</h2>
    <%= link_to "➕ Add new session", new_admin_session_path, class: "btn btn-primary" %>
    <ul>
      <% @sessions.each do |session| %>
        <li><%= link_to session.title, edit_admin_session_path(session) %></li>
      <% end %>
    </ul>
  </div>
</div>
